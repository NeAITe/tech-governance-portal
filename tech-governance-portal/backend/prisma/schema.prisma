// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  links       String[]
  description String
  screenshot  String?
  evaluations Evaluation[]
  internalProjects InternalProject[]
  metricGroups MetricGroup[]
  comments    Comment[]
  status      LifecycleStatus @default(UNDER_EVALUATION)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Metric {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  type        String   @default("NUMBER")
  minScore    Int?     @default(1)
  maxScore    Int?     @default(10)
  evaluations Evaluation[]
  groups      MetricGroup[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MetricGroup {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  metrics     Metric[]
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Evaluation {
  id          Int      @id @default(autoincrement())
  product     Product  @relation(fields: [productId], references: [id])
  productId   Int
  metric      Metric   @relation(fields: [metricId], references: [id])
  metricId    Int
  score       Int
  comments    String
  stakeholders String[]
  createdAt   DateTime @default(now())
}

model InternalProject {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  products    Product[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comment {
  id          Int      @id @default(autoincrement())
  product     Product  @relation(fields: [productId], references: [id])
  productId   Int
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  content     String
  createdAt   DateTime @default(now())
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  comments    Comment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum LifecycleStatus {
  UNDER_EVALUATION
  APPROVED
  STANDARD
  SUNSET
}
